{
  "name": "storage-keeper",
  "version": "1.1.0",
  "description": "Keeper for handling browser and node storages",
  "main": "./dist/index.js",
  "jsnext:main": "dist/index.es.js",
  "module": "./dist/index.es.js",
  "scripts": {
    "lint": "eslint --ext .js ./src ./tests",
    "lint-export": "npm run lint -- -o ./tests_results/checkstyle/js-checkstyle.xml -f checkstyle",
    "flow-init": "flow-typed install jest@22.x js-cookie@2.x",
    "flow": "flow",
    "flow-coverage": "flow-coverage-report -i \"./src/**/*.js*\" -t html -t text -t json -o tests_results/coverage/flow",
    "test": "jest",
    "test-build": "npm run test -- --config jest.config.build.js",
    "test-and-lint": "npm run lint && npm run flow && npm run test",
    "build": "rm -rf ./dist && rollup --config rollup.config.js",
    "prepublishOnly": "npm run build && npm run test-build"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/fabulator/storage-keeper.git"
  },
  "author": "Michal Ozog√°n <michal@ozogan.eu>",
  "license": "Apache-2.0",
  "homepage": "https://github.com/fabulator/storage-keeper.git",
  "devDependencies": {
    "@socifi/eslint-config": "^1.9.0",
    "flow-bin": "^0.79.0",
    "flow-coverage-report": "^0.5.0",
    "flow-typed": "^2.3.0",
    "jest-localstorage-mock": "^2.2.0",
    "@socifi/jest-config": "^1.9.0",
    "@socifi/rollup-config": "^1.10.0"
  },
  "dependencies": {
    "js-cookie": "^2.2.0"
  }
}
